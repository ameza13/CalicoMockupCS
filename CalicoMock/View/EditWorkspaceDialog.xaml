<Window x:Class="CalicoMock.View.EditWorkspaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="New Workspace" Height="189" Width="372"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0">Name</Label>
        <TextBox Name="txtName" Grid.Column="1"/>
        <Label Grid.Row="1">Notes</Label>
        <TextBox Name="txtNotes" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" AcceptsReturn="True"/>
        <WrapPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <!--Button Name="cmdCancel" Click="cmdCancel_Click" Width="50" Margin="0,5,5,0">Cancel</Button-->
            <Button Name="cmdOK" Click="cmdOK_Click" Width="50" Margin="0,5,0,0" IsDefault="True">OK</Button>
        </WrapPanel>
    </Grid>
</Window>
